<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sac4java.android_buttonclick.TimerActivity">

    <Button
        android:id="@+id/starttimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Timer"
        android:layout_below="@+id/secondslabel"
        android:layout_toRightOf="@+id/secondslabel"
        android:layout_toEndOf="@+id/secondslabel" />

    <TextView
        android:id="@+id/secondslabel"
        android:layout_width="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="50dp"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:textStyle="bold"
        android:text="Enter Seconds"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="67dp" />

    <EditText
        android:id="@+id/addseconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="10"
        android:layout_alignBaseline="@+id/secondslabel"
        android:layout_alignBottom="@+id/secondslabel"
        android:layout_toRightOf="@+id/secondslabel"
        android:layout_toEndOf="@+id/secondslabel" />

    <TextView
        android:id="@+id/timeroutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/secondslabel"
        android:layout_alignStart="@+id/secondslabel"
        android:layout_below="@+id/starttimer"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="87dp"
        android:textSize="25sp"
        android:text="" />
</RelativeLayout>
